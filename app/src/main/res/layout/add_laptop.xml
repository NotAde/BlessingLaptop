<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_home"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Penambahan laptop"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/header_layout"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- File Upload -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Upload"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/uploadArea"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dashed_border"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_upload"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tambah File..."
                        android:textColor="#888888"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Nama Laptop -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nama Laptop"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik nama laptop"
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <!-- Component Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Component"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Prossesor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Prossesor"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik.."
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <!-- Grafis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Grafis"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik.."
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <!-- Penyimpanan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Penyimpanan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik.."
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <!-- Ram -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ram"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik.."
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <!-- Layar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Layar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input_field"
                android:hint="ketik.."
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH"
                android:textColor="@color/white"
                app:backgroundTint="#003C91"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>